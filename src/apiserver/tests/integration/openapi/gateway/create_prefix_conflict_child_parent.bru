meta {
  name: create_gateway_prefix_conflict_child_parent
  type: http
  seq: 14
}

post {
  url: {{scheme}}://{{host}}/api/v1/open/gateways/
}

body {
    {
      "name": "test-parent-prefix",
      "description": "Test Gateway with parent prefix conflict",
      "mode": 1,
      "apisix_type": "bk-apisix",
      "apisix_version": "3.11.0",
      "etcd_endpoints": [
        "{{etcd_endpoints}}"
      ],
      "maintainers": [
        "admin"
      ],
      "etcd_prefix": "/",
      "etcd_schema_type": "http",
      "etcd_username": "{{etcd_username}}",
      "etcd_password": "{{etcd_password}}"
    }
}

headers {
  Content-Type: application/json
  X-BK-API-TOKEN: {{x_bk_api_token}}
}

tests {
  test("同一 etcd 集群创建父路径 prefix 应返回 400", function() {
    // 前置条件：已存在一个使用 /apisix 前缀的网关
    // 尝试创建使用 / 前缀的网关应该失败
    // 因为 / 是 /apisix 的父路径
    expect(res.status).to.equal(400);
  });

  test("错误信息应包含层级冲突提示", function() {
    expect(res.body.message).to.include("层级冲突");
  });
}
